@{
    ViewData["Title"] = "Home Page";
}
<div class="container bg-light col-5 rounded-3">
    <header class="text-center pt-5 pb-4"> <h1 class="font-monospace text-primary">Login Form</h1> </header>
    <form>
        <div>
            <input type="email" class="form-control mb-3" placeholder="Please Enter Email">
        </div>
        <div>
            <input type="password" class="form-control mb-3" placeholder="Please Enter Password">
        </div>
        <div>
            <button type="button" class="btn btn-outline-info form-control font-monospace text-decoration-none mb-3">LogIn </button>
        </div>
        <div>
            <h6 class="pb-5 text-center font-monospace">Don't have an account? @Html.ActionLink("Signup", "Signup", "Home")</h6>
        </div>
    </form>
</div>